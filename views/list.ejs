<%- include('header'); -%>
    <div class="box" id="heading">
        <h1>
            <%= listTitle %>
        </h1>
    </div>

    <div class="box">
        <% for(let item of newListItems) { %>
            <form action="/delete/<%= item._id %>" method="post">
                <div class="item">
                    <input name="checkbox" onChange="this.form.submit()" type="checkbox">
                    <p><%= item.name %></p>
                </div>
            </form>
            <% } %>

                <form class="item" action="/" method="POST">
                    <input type="text" autocomplete="off" name="newItem" placeholder="New Item" autofocus>
                    <button type="submit" name="list" value=<%=listTitle %>>+</button>
                </form>

    </div>

    <%- include('footer'); -%>