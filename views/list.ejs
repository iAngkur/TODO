
<%- include('header'); -%>
    <div class="box" id="heading">
        <h1><%= listTitle %></h1>
    </div>

    <div class="box">
        <% for(let item of newListItems) { %>
            <div class="item">
                <input type="checkbox">
                <p><%= item %></p>
            </div>
        <% } %>

        <form class="item" action="/" method="POST">
            <input type="text" autocomplete="off" name="newItem" placeholder="New Item" autofocus>
            <button type="submit" name="list" value=<%= listTitle %>>+</button>
        </form>

    </div>

<%- include('footer'); -%>